# Run the container with `docker run -p 3000:3000 -t aks-web-app`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system aks-web-app && \
          adduser --system -G aks-web-app aks-web-app

COPY dist/apps/aks-web-app aks-web-app
RUN chown -R aks-web-app:aks-web-app .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix aks-web-app --omit=dev -f install

CMD [ "node", "aks-web-app" ]
